rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Reglas para datos privados de cada usuario (Journal, Checklist, Pomodoro, Trello Config)
    // Permite leer y escribir SOLO si el usuario está autenticado Y su UID coincide con el userId en la ruta.
    match /artifacts/{appId}/users/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Reglas para los artículos del Blog (ahora directamente bajo appId)
    // Permite leer si el usuario está autenticado. La escritura está deshabilitada desde el frontend.
    match /artifacts/{appId}/blogArticles/{documents=**} { // <--- CAMBIO AQUÍ
      allow read: if request.auth != null;
      allow write: if false; // Solo tú (o un proceso de backend) deberías escribir aquí
    }

    // Si tienes alguna otra colección pública que no sea blogArticles y no esté bajo /public/data,
    // necesitarías una regla específica para ella también.
  }
}
